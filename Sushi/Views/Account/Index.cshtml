@{
  Layout = "_Layout";
}

<div class="accountBox ">

@using System.Security.Claims


  @if (User.Identity.IsAuthenticated)
  {
    <h1>Please login if you are an admin</h1>
    <p class = "formInfo">Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
      <input type="submit" class="btn" value="Log out" />
    }
    @* <img  class ="image6" src = "~/img/sushi6.png"> *@
   
  }
  else
  {
    <h1>Register or Login to Your Account</h1>

    @Html.ActionLink("Register", "Register", null, null, new { @class = "pageLink" })
    @Html.ActionLink("Login", "Login", null, null, new { @class = "pageLink" })

    
  }
</div>