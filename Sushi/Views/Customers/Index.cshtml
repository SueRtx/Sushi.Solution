@{
  Layout = "_Layout";
}

@using Sushi.Models;
@model List<Sushi.Models.Customer>;

<h1>Customers</h1>

@if (@Model.Count == 0)
{
  <h3>No customers have been added yet!</h3>
}

@foreach (Customer customer in Model)
{
  @Html.ActionLink($"{customer.CustomerName}", "Details", new { id = customer.CustomerId })
}

@Html.ActionLink("Add new customer", "Create")
@Html.ActionLink("Home", "Index", "Home")
