@{
  Layout = "_Layout";
}

@model Sushi.Models.MenuItem

<h2>Edit</h2>

<h4>Edit this Menu Item: @Html.DisplayFor(model => model.MenuItemName)</h4>

@using (Html.BeginForm())
{
  <ul>
    <li> @Html.HiddenFor(model => model.MenuItemId)</li>
    <li> @Html.LabelFor(model => model.MenuItemName)
      @Html.EditorFor(model => model.MenuItemName)</li>
    <li> @Html.LabelFor(model => model.Customer)
      @Html.DropDownList("CustomerId")</li>
  </ul>


  <input type="submit" value="Save" />
}
