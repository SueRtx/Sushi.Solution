@{
  Layout = "_Layout";
}

@using Sushi.Models;
@model List<Sushi.Models.MenuItem>;
<div class="menuItemBox">
<h2>Menu Items</h2>

@if (@Model.Count == 0)
{
  <h6>No Menu Items have been added yet!</h6>
}

else
  {
  <h6>Click on Machine to See Details</h6>
  @foreach (MenuItem item in Model)
  {
    @Html.ActionLink($"{item.MenuItemName}", "Details", new { id = item.MenuItemId })

    @Html.ActionLink($"{item.MenuItemPrice}", "Details", new { id = item.MenuItemId })
  }
}
<br>
@Html.ActionLink("Add Order", "Create", null, null, new { @class ="pageLink" })
 
</div>